{
  "name": "finans",
  "version": "1.0.0",
  "description": "Landing page de uma empresa de gestão de finanças.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "create-dirs": "mkdir -p dist/src/css && mkdir -p dist/src/js",
    "copy:assets": "cpx \"src/imagens/**/*\" \"dist/src/imagens\" && cpx \"vendor/**/*\" \"dist/vendor\" && cpx \"templates/**/*\" \"dist/templates\"",
    "minify:html": "html-minifier --input-dir . --output-dir dist --file-ext html --remove-comments --collapse-whitespace index.html pages/*.html",
    "minify:css": "cleancss -o dist/src/css/estilos-globais.css src/css/estilos-globais.css",
    "minify:js": "uglifyjs src/js/carousel-config.js src/js/template-loader.js -o dist/src/js/app.min.js -c -m",
    "clean:maps": "rimraf dist/**/*.map",
    "build": "npm-run-all clean create-dirs copy:assets minify:html minify:css minify:js clean:maps",
    "firebase-deploy": "echo 'Deploying to Firebase... (This step is handled by the IDE assistant)'",
    "deploy": "npm-run-all build firebase-deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Domisnnet/Finans.git"
  },
  "keywords": [
    "HTML",
    "CSS",
    "JavaScript",
    "Bootstrap"
  ],
  "author": "DomisDev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Domisnnet/Finans/issues"
  },
  "homepage": "https://github.com/Domisnnet/Finans#readme",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "cpx": "^1.5.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {
    "mkdirp": "^0.5.1"
  }
}